// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Admin {
  username String @unique
  passwordHash String
}

model CalonK3M {
  id        String   @id @default(uuid())
  NIM       String      @unique
  name      String
  jurusan   String
  angkatan  Int
  visi      String[]
  misi      String[]
  pil_1_count Int @default(0)
  pil_2_count Int @default(0)
  pil_3_count Int @default(0)
}

model CalonMWAWM {
  id        String   @id @default(uuid())
  NIM       String   @unique
  name      String
  jurusan   String
  angkatan  Int
  visi      String[]
  misi      String[]
  pil_1_count Int @default(0)
  pil_2_count Int @default(0)
  pil_3_count Int @default(0)
}

model Mahasiswa {
  id           String   @id @default(uuid())
  NIM          String   @unique
  name         String
  state        Boolean  @default(false)
  token        String   @unique
}

model VoteMWAWM {
  id String @unique @default(uuid())
  pil_1 Int
  pil_2 Int
  pil_3 Int
}

model VoteK3M {
  id String @unique @default(uuid())
  pil_1 Int
  pil_2 Int
  pil_3 Int
}



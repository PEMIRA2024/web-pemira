// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  username String @unique
  passwordHash String @unique
}

model CalonK3M {
    id        String   @id @default(uuid())
    NIM       String      @unique
    name      String
    jurusan   String
    angkatan  Int
    visi      String[]
    misi      String[]
    pilihan_1 Int @default(0)
    pilihan_2 Int @default(0)
    pilihan_3 Int @default(0)
}

model CalonMWAWM {
    id        String   @id @default(uuid())
    NIM       String   @unique
    name      String
    jurusan   String
    angkatan  Int
    visi      String[]
    misi      String[]
    pilihan_1 Int @default(0)
    pilihan_2 Int @default(0)
    pilihan_3 Int @default(0)
}

model Mahasiswa {
    id           String   @id @default(uuid())
    NIM          String   @unique
    name         String
    passwordHash String   @unique
    state        Boolean  @default(false)
    token        String   @unique
}

model Vote {
  id String @unique @default(uuid())
  idMahasiswa String @default(uuid())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  rankCalonK3M String[]
  rankCalonMWAWM String[]
}
